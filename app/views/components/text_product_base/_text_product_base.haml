%div{class: "#{component.class_parent_component}"}
	.row.my-4.py-4
		.col-lg-7.col-12
			.row
				- @products.each do |product|
					.col-lg-4.col-6.mb-4
						=link_to product_path(product) do
							.card
								.product-slick
									- product.images.each do |image|
										.mx-3.my-4
											= manipulate_image_tag(image, options: {image_quality: image.image_quality}, html: {width: "50", class: "img-center img-fluid"})
								.card-body.text-center
									%h5= product.name.to_s.truncate(15)
									%hr
									%p.text-center= product.short_description.to_s.html_safe
									-# %b= number_to_currency(product.price, unit: "Rp. ", separator: ",", delimiter: ".")
		.col-lg-5.col-12
			= component.description.to_s.html_safe

:javascript
	loadjs(["/assets/frontend/lib/slick.min.js", "/assets/frontend/lib/slick.css", "/assets/frontend/lib/slick-theme.css"], 'text_product_base');
	loadjs.ready('text_product_base', function() {
		$('.product-slick').not('.slick-initialized').slick({
			autoplay:true,
			dots: true,
			infinite: true
		});
	})