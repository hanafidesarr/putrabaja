:javascript

	loadjs(["/assets/frontend/lib/pricing_list_card/reset.css", "/assets/frontend/lib/pricing_list_card/style.css", "/assets/frontend/lib/pricing_list_card/modernizr.js", "/assets/frontend/lib/pricing_list_card/main.js"], 'pricing-list-card', {
		before: function(path, scriptEl) {
			$("#loading_component-#{component.id}").addClass("loading_component")
		}});
	loadjs.ready('pricing-list-card', function() {
		$(".click_choice").click(function(){
			$(".fieldset > label").css("color", "#5061CE")
			$(this).css("color", "white")
		})
		$("#loading_component-#{component.id}").removeClass("loading_component")
	})

	document.addEventListener("turbolinks:load", function () {
		
		$("body").attr("data-turbolinks", "false")
		loadjs(["/assets/frontend/lib/pricing_list_card/reset.css", "/assets/frontend/lib/pricing_list_card/style.css", "/assets/frontend/lib/pricing_list_card/modernizr.js", "/assets/frontend/lib/pricing_list_card/main.js"], 'pricing-list-card', {
			before: function(path, scriptEl) {
				$("#loading_component-#{component.id}").addClass("loading_component")
			}});
		loadjs.ready('pricing-list-card', function() {
			$(".click_choice").click(function(){
				$(".fieldset > label").css("color", "#5061CE")
				$(this).css("color", "white")
			})
			$("#loading_component-#{component.id}").removeClass("loading_component")
		})
	});