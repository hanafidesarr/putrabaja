- images = component.images
- if component.use_slideReveal == "true"
  .row
    .col-12.p-0.mb-4{style: "text-align: right;"}

      =button_tag id: "trigger", class: "btn btn-primary text-white py-0 px-4" do 
        %span.fa.fa-angle-double-left
        Lihat semua
  #slider.p-2{style: "background-color: #F7F7F9;"}
    - if images.present?
      .container
        .row
          - images.each do |image|
            .col-6.col-lg-2.my-1.px-1
              .card.card-body{style: "border-radius: 10px; border: solid #eee; box-shadow: 4px 7px 11px #eee;"}
                =link_to image.url do
                  =image_tag(image.asset.url(:thumb), class: "w-50 text-center", alt: "#{image.title}")
                  %hr{style: "color: gray;"}
                  %small.text-center.text-dark=image.title

- if images.present?
  .container
    .row.text-center
      - images.limit(6).each do |image|
        .col-6.my-2{class: "col-lg-2"}
          .card.card-body{style: "border-radius: 10px; border: solid #eee; box-shadow: 4px 7px 11px #eee;"}
            =link_to image.url do
              =image_tag(image.asset.url(:thumb), class: "w-50 mx-auto lazy", alt: "#{image.title}", style: "height: 70px;", "data-src": image.asset.url(:thumb)) 
              
              %hr{style: "color: gray;"}
              %small.text-dark=image.title

:javascript

  loadjs(["/assets/frontend/lib/jquery.slidereveal.min.js"], 'list_images');
  loadjs.ready('list_images', function() {
    if ("#{component.use_slideReveal == 'true'}") {
      $('#slider').slideReveal({
        trigger: $("#trigger"),
        width: "75%",
        overlay: true,
        speed: 700,
        position: "right"
      });
    }
  });