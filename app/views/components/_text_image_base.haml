.container
	.section-wrapper
		- if component.page.layout.eql?("products")
			%p
				=component.description.to_s.html_safe
		- else
			.row 
				.col-lg-6.col-12
					%h1
						=component.name
					%p
						=component.description.to_s.html_safe
					=link_to component&.url_text || "/", class: "btn bg-yellow" do
						READ MORE
				.col-lg-6.col-12
					- if (attachments = component.attachments).present?
						- attachments.each do |attachment|
							=image_tag(attachment.asset.url, width: "100%")

					:javascript
						$('.product-slick').slick({
							autoplay:true,
							dots: true,
							infinite: true
						});
