.container
  .section-wrapper
    .row 
      .col-4
        %h1="Kategori"
        - @categories.root.each do |category|
          .card 
            .card-body
              %h5.text-uppercase=category.name
              - if ( childrens = category.children ).present?
                - childrens.each do | cat_child |

                  = link_to categories_show_product_path(id: cat_child.id), remote: :true do
                    .card 
                      .card-body
                        = cat_child.name  
      .col-8
        .products-show