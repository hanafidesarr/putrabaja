.container
	.section-wrapper
		.d-block
			.nav-banner-cursor.d-none.d-lg-block.d-xl-block
				%i.fa.fa-chevron-left.fa-2xl.prev-btn
				%i.fa.fa-chevron-right.fa-2xl.next-btn
			.owl-carousel
				- component.attachments.each do |attachment|
					%div
						.textoverlay
							.row.align-items-center
								.col-lg-6.col-12.d-none.d-lg-block.d-xl-block
									.ml-3{style: "margin-left: 8rem"}
										%h1
											=attachment.title
											%br
											=link_to component&.url_product || "/", class: "btn btn-dark" do
												GET MORE
								.col-lg-6.col-12
									.limit
										- if (url = attachment.asset&.url).present?
											=image_tag(attachment.asset.url )
								.col-lg-6.col-12.d-block.d-sm-none
									%h1.text-center
										=attachment.title
										%br
										=link_to component&.url_product || "/", class: "btn btn-dark" do
											GET MORE

:javascript

	var owl = $('.owl-carousel');
	owl.owlCarousel({
		items: 1,
		loop: true,
		nav: false,
		autoplay:true,
		touchDrag: false,
		autoplayHoverPause:true,
		autoplayTimeout: 3000,
		smartSpeed: 1000
	});

	$('.next-btn').click(function() {
			owl.trigger('next.owl.carousel');
	})

	$('.prev-btn').click(function() {
			owl.trigger('prev.owl.carousel');
	})