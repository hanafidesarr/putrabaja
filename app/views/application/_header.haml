    #navbarSupportedContent.collapse.navbar-collapse
      %ul.navbar-nav.me-auto.mb-2.mb-lg-0
        %br.d-block.d-lg-none
        - @pages.each do |page|
          %li.nav-item
            - case page.layout
            - when "home"
              = link_to "/", class: "nav-link text-uppercase text-white" do
                = page.title

            - when "categories"
              .dropdown
                #dropdownMenuButton.dropdown-toggle.nav-link.text-uppercase.text-white{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                  Kategori
                .dropdown-menu{"aria-labelledby" => "dropdownMenuButton"}
                  - @categories.root.each do |category|
                    =link_to category.name, category_path(category), class: "dropdown-item"
            - when "products"
              = link_to products_path, class: "nav-link text-uppercase text-white" do
                = page.title
            - else
              = link_to page_path(page), class: "nav-link text-uppercase text-white" do
                = page.title
