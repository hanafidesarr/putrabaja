      %form.flex-container
        %hr.text-white.d-block.d-lg-none
        -if @setting.url_media_socials[:instagram].present?
          %li.nav-item.m-auto
            =link_to @setting.url_media_socials[:whatsapp], class: "nav-link" do
              = image_tag("frontend/whatsapp.png", width: "25")
