:css

	.hover_transition{
		border-radius: 4px;
		background: #fff;
		box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
		transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
		cursor: pointer;
	}

	.hover_transition:hover{
			transform: scale(1.05);
		box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
	}
.container-fluid.px-0
	.row
		= manipulate_image_tag(@category.images.first, options: {image_quality: @category.images.first.image_quality}, html: {class: "text-center"}) if @category.images.first.present?
.container
	.row 
		.col-lg-3.col-12
			=render partial: "categories/sidebar_categories", locals: { category: @category }
			%hr
		.col-lg-9.col-12
			- if @category.is_root? && ( childrens = @category.children ).present?
				.row
					- childrens.each do | cat_child |
						.col-md-3.col-6.my-2
							.card.card-body.hover_transition.shadow.border-0.p-0
								= link_to category_path(cat_child) do
									%div.m-0{style: "background: rgba(0, 0, 0, 0.3); opacity: 0.5;"}
										= manipulate_image_tag(cat_child.images.first, options: {image_quality: cat_child.images.first.image_quality}, html: {class: "text-center"}) if cat_child.images.first.present?
									- if cat_child.images.first.present?
										.text-white{style: "position: absolute; top: 50%; left: 50%; transform: translate(-50%,-50%);"}
											%hr.my-1{style:"opacity:1"}
											.text-center= cat_child.name
											%hr.my-1{style:"opacity:1"}
									- else
										= cat_child.name
			- else
				- if @products.present?
					=render partial: "categories/products", locals: { products: @products }
					= paginate @products
				