    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <%= javascript_include_tag 'application' %>
    <div id="loading"></div>
    
    <% if (select_font = Setting.first.font_combo).present?%>
      <% collection_combo_font = Setting::COLLECTION_FONT_COMBO %>
      <% collection_combo_font.each do |font| %>
        <% if font[1] == select_font.to_i %>
          <% @font_class = font[0].downcase.parameterize(separator: '_') %>
          <% if (font_text = font[0].split(' + ') rescue nil).present? %>
            <% font_text.each do |text| %>
              <% select_font_text = text.gsub(' ', '+') %>
              <link crossorigin="anonymous" href="https://fonts.googleapis.com/css?family=<%= select_font_text %>:400,600,700,800,300&display=swap" media="print" onload="this.onload=null;this.removeAttribute('media');" rel="stylesheet"></link>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end%>
    
<style>
body {
  justify-content: center;
  align-items: center;
  background: #f2f2f2;
 --l: 3.5em;
 overflow-x:hidden;
