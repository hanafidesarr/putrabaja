=form_for [:admin, page], {html: {class: "form text-center" }} do |f|
    .form-row
        .col-12
            .form-group.row
                =f.label :title
                =f.text_field :title, class: "form-control"
                .actions.mb-3
                    = button_tag type: 'submit', class: "btn btn-primary btn-sm" do
                        %i.fa.fa-floppy-o{"aria-hidden" => "true"}
                        = t("admin.words.save")