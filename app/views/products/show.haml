.container
	.section-wrapper
		.row 
			.col-lg-6.col-12
				.product-slick
					- @product.images.each do |image|
						=image_tag(attachment.asset.url, width: "100%")

			.col-lg-6.col-12
				.card.card-body.bg-secondary.text-white{style: "border-radius: 1rem;"}
					%h1.font-weight.text-light.font-weight=@product.name
					%small=@product.short_description
					%hr
					.row 
						.col-4
							%p= "Battery life"
						.col-8
							%p=@product.battery_life
					.row 
						.col-4
							%p= "Model"
						.col-8
							%p=@product.model
					.row 
						.col-4
							%p= "Processor"
						.col-8
							%p=@product.processor
					.row 
						.col-4
							%p= "Memory"
						.col-8
							%p=@product.memory
					.row 
						.col-4
							%p= "Hard Drive"
						.col-8
							%p=@product.hard_drive
					.row 
						.col-4
							%p= "VGA"
						.col-8
							%p=@product.vga
					.row 
						.col-4
							%p= "Display Type"
						.col-8
							%p=@product.display_type
					.row 
						.col-4
							%p= "Operating System"
						.col-8
							%p=@product.os
					.row 
						.col-4
							%p= "Optical Drive"
						.col-8
							%p=@product.optical_drive
					.row 
						.col-4
							%p= "Warranty"
						.col-8
							%p=@product.warranty
					.row 
						.col-4
							%p= "Wireless"
						.col-8
							%p=@product.wireless
					.row 
						.col-4
							%p= "Bluetooth"
						.col-8
							%p=@product.bluetooth
					.row 
						.col-4
							%p= "Other"
						.col-8
							%p=@product.other
					%hr
						.row
							.col-12.my-1
								- url = request.original_url 
								=link_to "https://web.whatsapp.com/send?phone=#{Setting.first.phone}&text=ORDER ID-#{@product.id} #{@product.name} harga : #{@product.price} link : #{url}" , class: "btn w-100", style: "background-color: white;" do
									=image_tag("frontend/whatsapp.png", width: "25")
									="CHAT KE WHATSAPP"
		.row 
			.col
				%hr
				%h3.text-center Deskripsi Product
				%hr
				%p= @product.description

:javascript
	loadjs(["/assets/frontend/lib/slick.min.js", "/assets/frontend/lib/slick.css", "/assets/frontend/lib/slick-theme.css"], 'products_show');
	loadjs.ready('products_show', function() {
		$('.product-slick').not('.slick-initialized').slick({
			autoplay:true,
			dots: true,
			infinite: true
		});
	})