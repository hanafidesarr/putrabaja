%link{href: "https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css", rel: "stylesheet"}/
%link{href: "https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css", rel: "stylesheet"}/

%script{src: "https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"}

.container
  %i.fa.fa-chevron-left.fa-2xl.customPrevBtn
  %i.fa.fa-chevron-right.fa-2xl.customNextBtn
  - @components.each do |component|

    - if component.layout == "banner"
      =render partial: "components/banner", locals: { component:component }
    - if component.layout == "text_base"
      =render partial: "components/text_base", locals: { component:component }
    - if component.layout == "text_maqruee_base"
      =render partial: "components/text_maqruee_base", locals: { component:component }
    - if component.layout == "text_product_base"
      =render partial: "components/text_product_base", locals: { component:component }

  %hr
:javascript
  var owl = $('.owl-carousel');
  owl.owlCarousel({
    items: 1,
    loop: true,
    nav: false,
    autoplay:true,
    autoplayTimeout: 3000,
    smartSpeed: 1000,
    freeDrag: true,
    navText: [
      "<i class='fa fa-chevron-left'></i>",
      "<i class='fa fa-chevron-right'></i>"
    ],
  });

  $('.customNextBtn').click(function() {
      owl.trigger('next.owl.carousel');
  })

  $('.customPrevBtn').click(function() {
      owl.trigger('prev.owl.carousel');
  })





  $('.single-item-home').slick({
    autoplay:true,
    dots: true,
    infinite: true
  });

  $('.product-slick').slick({
    autoplay:true,
    dots: true,
    infinite: true
  });