=link_to "DESIGN", custom_design_page_path


.container-fluid
  %hr
  .row
    - @products.each do |product|
      .col-md-3
        .card
          .single-item
            - product.attachments.each do |attachment|
              =image_tag(attachment.asset.url, width: "10x500")
          .card-body.text-center
            %h5= product.name
            = product.short_description
            %hr
            %b= number_to_currency(product.price, unit: "Rp. ", separator: ",", delimiter: ".")


:javascript

  $('.single-item').slick({
    autoplay:true,
    dots: true,
    infinite: true
  });

  $('.image-maker-template-image').slick({
    slidesToShow: 4,
    slidesToScroll: 4,
    autoplay:true,
    dots: true,
    infinite: true
  });

  $('.image-maker-thumbnail-image').slick({
    slidesToShow: 5,
    slidesToScroll: 1,
    autoplay:false,
    dots: true,
    infinite: true
  });